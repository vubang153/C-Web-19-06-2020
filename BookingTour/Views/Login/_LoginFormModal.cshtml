<div class="modal fade" id="loginForm" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="border-bottom">
                <h2 class="text-center mt-2">Đăng nhập</h2>
            </div>
            <form method="POST" id="formLogin">
                <div class="modal-body">
                    <div class="form-group">
                        <input type="text" id="username" name="username" class="form-control" placeholder="Tài khoản">
                    </div>
                    <div class="form-group">
                        <input type="password" id="password" name="password" class="form-control" placeholder="Mật khẩu">
                    </div>
                </div>
                <label class="pull-left checkbox-inline ml-4 w-100">
                    <input type="checkbox" name="rememberMe" id="rememberMe">
                    Ghi nhớ đăng nhập
                </label>
                <div class="modal-footer form-group">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary">Đăng nhập</button>
                </div>
            </form>
        </div>
    </div>
</div>
