<div class="modal fade" id="register_form" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
    <div class="modal-dialog form-register" role="document">

        <div class="modal-content">
            <div class="border-bottom">
                <h2 class="text-center mt-2">Đăng ký</h2>
            </div>
            <form id="registerForm" method="POST" action="/User/Register">
                <div class="modal-body mx-3">
                    <div class="md-form">
                        <label data-error="wrong" data-success="right" for="form-add-username">Tài khoản</label>
                        <input type="text" id="form-add-username" class="form-control validate" name="username" placeholder="Tài khoản">
                    </div>
                    <div class="md-form ">
                        <div class="row">
                            <div class="col-lg-6 pr-0">
                                <label data-error="wrong" data-success="right" for="form-add-password">Mật khẩu</label>
                                <input type="password" id="form-add-password" class="form-control validate" name="password" placeholder="Mật khẩu">
                            </div>
                            <div class="col-lg-6">
                                <label data-error="wrong" data-success="right" for="form-add-repeatPassword">Nhập lại mật khẩu</label>
                                <input type="password" id="form-add-repeatPassword" class="form-control validate" name="rePassword" placeholder="Nhập lại mật khẩu">
                            </div>
                        </div>
                    </div>
                    <div class="md-form ">
                        <div class="row">
                            <div class="col-lg-6 pr-0">
                                <label data-error="wrong" data-success="right" for="form-add-name">Họ và tên</label>
                                <input type="text" id="form-add-name" class="form-control validate" name="name" placeholder="Họ và tên">
                            </div>
                            <div class="col-lg-6">
                                <label data-error="wrong" data-success="right" for="form-add-email">Email</label>
                                <input type="text" id="form-add-email" class="form-control validate" name="email" placeholder="Email">
                            </div>
                        </div>
                    </div>
                    <div class="md-form ">
                        <label data-error="wrong" data-success="right" for="form-add-DOB">Ngày sinh</label>
                        <input type="text" id="form-add-DOB" class="form-control validate date-picker" data-date-end-date="-1d" placeholder="DD/MM/YYYY" name="DOB">
                    </div>

                    <div class="md-form ">
                        <label data-error="wrong" data-success="right" for="">Giới tính</label><br />
                        <label for="male-gender" class="radio-inline">
                            <input type="radio" class="validate" name="gender" checked id="male-gender" value="true"> Nam
                        </label>
                        <label for="female-gender" class="radio-inline ml-2">
                            <input type="radio" class="validate" name="gender" id="female-gender" value="false"> Nữ
                        </label>

                    </div>
                </div>
                <div class="modal-footer justify-content-center">
                    <button class="btn btn-warning" type="submit">Đăng ký<i class="fas fa-paper-plane-o ml-1"></i></button>
                </div>
            </form>
        </div>

    </div>
</div>
