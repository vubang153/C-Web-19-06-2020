@using Model.EF.Model
@using BookingTour.Commons
@model ListOrder
@section js_footer {
    <script src="~/Scripts/Commons/Common.js"></script>
    <script src="~/Scripts/Commons/AlertBox2.js"></script>
    <script src="~/Scripts/Controllers/OrderController.js"></script>
}
@section modal {
    @Html.Partial("~/Views/Tour/_AlertBox.cshtml")
    @Html.Partial("~/Views/Login/_LoginFormModal.cshtml")
}
<section class="container mb-5 booking-page">
    <div class="w-100 bg-page">
        <nav aria-label="breadcrumb" id="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item" aria-current="page">
                    <a href="/Home">Trang chủ</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    <a href="#">Quản lý tài khoản</a>
                </li>
            </ol>
        </nav>

        <div class="row mt-2">
            <div class="col-3">
                @Html.Partial("_ProfileSideBar")
            </div>
            <div class="col-9">
                <div class="profile-content h-100">
                    <ul class="nav nav-tabs purchase-list">
                        <li class=""><a data-toggle="tab" href="#home" class="active show">Tất cả</a></li>
                        <li class=""><a data-toggle="tab" href="#menu1">Chờ xác nhận</a></li>
                        <li class=""><a data-toggle="tab" href="#menu2">Đang thực hiện</a></li>
                        <li class=""><a data-toggle="tab" href="#menu3">Đã hoàn thành</a></li>
                        <li class=""><a data-toggle="tab" href="#menu4">Đã huỷ</a></li>
                    </ul>

                    <div class="tab-content">
                        <div id="home" class="tab-pane fade show active list-purchase">
                            @foreach (var item in Model.listAll)
                            {
                                <div class="purchase-product">
                                    <div class="row">
                                        <div class="col-9">
                                            <div class="row">
                                                <div class="col-3">
                                                    <img src="@item.Tour.image" class="w-100 h-100" id="order-tour-image" />
                                                </div>
                                                <div class="col-9">
                                                    <a href="/Tour?id=@item.Tour.id" class="purchase-product-title">
                                                        @item.Tour.name
                                                    </a>
                                                    <p>
                                                        @item.total_payment $
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <b class="payment-status">@Commons.convertString(item.status, "Chờ xác nhận", "Đang thực hiện", "Đã hoàn thành", "Đã huỷ")</b>
                                        </div>
                                    </div>
                                </div>

                            }

                        </div>
                        <div id="menu1" class="tab-pane fade">
                            @foreach (var item in Model.list1)
                            {
                                <div class="purchase-product">
                                    <div class="row">
                                        <div class="col-9">
                                            <div class="row">
                                                <div class="col-3">
                                                    <img src="@item.Tour.image" class="w-100 h-100" id="order-tour-image" />
                                                </div>
                                                <div class="col-9">
                                                    <a href="/Tour?id=@item.Tour.id" class="purchase-product-title">
                                                        @item.Tour.name
                                                    </a>
                                                    <a class="d-block">
                                                        @item.total_payment $
                                                    </a>
                                                    <a class="d-block font-weight-bold cancel-order" href="#" data-bind="@item.id">HUỶ TOUR</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <b class="payment-status">@Commons.convertString(item.status, "Chờ xác nhận", "Đang thực hiện", "Đã hoàn thành", "Đã huỷ")</b>
                                        </div>
                                    </div>
                                </div>

                            }
                        </div>
                        <div id="menu2" class="tab-pane fade">
                            @foreach (var item in Model.list2)
                            {
                                <div class="purchase-product">
                                    <div class="row">
                                        <div class="col-9">
                                            <div class="row">
                                                <div class="col-3">
                                                    <img src="@item.Tour.image" class="w-100 h-100" id="order-tour-image" />
                                                </div>
                                                <div class="col-9">
                                                    <a href="/Tour?id=@item.Tour.id" class="purchase-product-title">
                                                        @item.Tour.name
                                                    </a>
                                                    <p>
                                                        @item.total_payment $
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <b class="payment-status">@Commons.convertString(item.status, "Chờ xác nhận", "Đang thực hiện", "Đã hoàn thành", "Đã huỷ")</b>
                                        </div>
                                    </div>
                                </div>


                            }
                        </div>
                        <div id="menu3" class="tab-pane fade">
                            @foreach (var item in Model.list3)
                            {
                                <div class="purchase-product">
                                    <div class="row">
                                        <div class="col-9">
                                            <div class="row">
                                                <div class="col-3">
                                                    <img src="@item.Tour.image" class="w-100 h-100" id="order-tour-image" />
                                                </div>
                                                <div class="col-9">
                                                    <a href="/Tour?id=@item.Tour.id" class="purchase-product-title">
                                                        @item.Tour.name
                                                    </a>
                                                    <p>
                                                        @item.total_payment $
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <b class="payment-status">@Commons.convertString(item.status, "Chờ xác nhận", "Đang thực hiện", "Đã hoàn thành", "Đã huỷ")</b>
                                        </div>
                                    </div>
                                </div>


                            }
                        </div>

                        <div id="menu4" class="tab-pane fade">
                            @foreach (var item in Model.list4)
                            {
                                <div class="purchase-product">
                                    <div class="row">
                                        <div class="col-9">
                                            <div class="row">
                                                <div class="col-3">
                                                    <img src="@item.Tour.image" class="w-100 h-100" id="order-tour-image" />
                                                </div>
                                                <div class="col-9">
                                                    <a href="/Tour?id=@item.Tour.id" class="purchase-product-title">
                                                        @item.Tour.name
                                                    </a>
                                                    <p>
                                                        @item.total_payment $
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <b class="payment-status">@Commons.convertString(item.status, "Chờ xác nhận", "Đang thực hiện", "Đã hoàn thành", "Đã huỷ")</b>
                                        </div>
                                    </div>
                                </div>


                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>