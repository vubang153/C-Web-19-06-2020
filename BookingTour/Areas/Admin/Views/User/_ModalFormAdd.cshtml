@using Model.EF;
@{
    var provinceList = (List<Province>)ViewBag.provinceList;
}
<div class="modal fade" id="modalAddNewUser" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    @using (Html.BeginForm("Insert", "User", FormMethod.Post, new { autocomplete = "off", id="FormAddNewUser" }))
    {
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body mx-3">
                    <input type="hidden" name="id">
                    <div class="md-form mb-1">
                        <label data-error="wrong" data-success="right" for="form-add-username">Tài khoản</label>
                        <input type="text" id="form-add-username" class="form-control validate" name="username">
                    </div>
                    <div class="md-form mb-1">
                        <label data-error="wrong" data-success="right" for="form-add-password">Mật khẩu</label>
                        <input type="password" id="form-add-password" class="form-control validate" name="password">
                    </div>
                    <div class="md-form mb-1">
                        <label data-error="wrong" data-success="right" for="form-add-name">Họ và tên</label>
                        <input type="text" id="form-add-name" class="form-control validate" name="name">
                    </div>
                    <div class="md-form mb-1">
                        <label data-error="wrong" data-success="right" for="form-add-email">Email</label>
                        <input type="text" id="form-add-email" class="form-control validate" name="email">
                    </div>
                    <div class="md-form mb-1">
                        <label data-error="wrong" data-success="right" for="form-add-DOB">Ngày sinh</label>
                        <input type="text" id="form-add-DOB" class="form-control validate form-DOB" placeholder="DD/MM/YYYY" name="DOB">
                    </div>
                    <div class="md-form mb-1">
                        <label data-error="wrong" data-success="right" for="form-add-address">Địa chỉ</label>
                        <input type="text" id="form-add-address" class="form-control validate"  name="address">
                    </div>

                    <div class="md-form mb-1">
                        <label data-error="wrong" data-success="right" for="districtID">Quận/ Huyện</label>
                        <div class="container-fluid">
                            <div class="row">
                                <select class="form-control col-5 districtSelectedForm" id="districtSelectedForm" name="districtID">
                                    <option selected disabled hidden>Quận</option>
                                    @foreach (var item in provinceList)
                                    {
                                        <option value="@item.id">@item.name</option>
                                    }
                                </select>
                                <select class="form-control col-5 ml-2 provinceSelectedForm" name="provinceID">
                                    <option selected disabled hidden>Huyện/ Phường</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="md-form mb-1">
                        <label data-error="wrong" data-success="right" for="">Giới tính</label><br />
                        <input type="radio" class="validate" name="gender" checked> Nam
                        <input type="radio" class="validate" name="gender"> Nữ
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <button class="btn btn-indigo">Thêm mới<i class="fas fa-paper-plane-o ml-1"></i></button>
                </div>
            </div>
        </div>
    }
</div>
